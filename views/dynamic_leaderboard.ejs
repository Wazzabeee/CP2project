<!DOCTYPE html>
<html lang="en">
  <head>
  	<title>Leaderboard</title>
  	<meta charset="utf-8">
    	<meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="icon" href="img/logo.png"> <!-- icon on tab page -->
    	<link rel="stylesheet" type="text/css" href="css/style.css">
    	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
      <!-- flags imgs -->
      <link rel="stylesheet" href="css/flags.css?ddasda=42342423">
  </head>

  <body>
  	<div class="body_bg">
        <!-- navbar menu start -->
        <header class="main">
              <div class="container">
                  <div class="row">
                      <div class="col-lg-12">
                        <!-- nav menu | always top of the page | new config for sm | dark theme -->
                          <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
                              <!-- logo + link to index -->
                              <a class="navbar-brand" href="index"> <img class="img-fluid logo" src="img/logo.png" alt="logo"></a>
                              <!-- menu icon showing up when navbar's too big for screen size -->
                              <button class="navbar-toggler" type="button" data-toggle="collapse"
                                  data-target="#navbarMenu"><!-- linked to next div -->
                                  <span class="menu_icon"><i class="fas fa-bars"></i></span>
                              </button>

                              <div class="collapse navbar-collapse main-item" id="navbarMenu">
                                  <ul class="navbar-nav">
                                      <li class="nav-item dropdown">
                                          <a class="nav-link dropdown-toggle" href="index" role="button" data-toggle="dropdown">Home</a>

                                          <div class="dropdown-menu">
                                              <div class="dropdown-header">Homepage's anchors</div>

                                              <a class="dropdown-item disabled" href="#history">Tic Tac Toe's History</a>
                                              <a class="dropdown-item disabled" href="#rules">Rules</a>

                                              <div class="dropdown-divider"></div><!-- divides the dropdown in two sections -->
                                              
                                              <a class="dropdown-item" href="index">Home</a>

                                          </div>
                                      </li>
                                      <li class="nav-item">
                                          <a class="nav-link" href="play">Play</a>
                                      </li>
                                      <li class="nav-item">
                                          <a class="nav-link active" href="leaderboard">Leaderboard</a>
                                      </li>
                                      <li class="nav-item">
                                          <a class="nav-link" href="about">About</a>
                                      </li>
                                  </ul>
                              </div>
                          </nav>
                      </div>
                  </div>
              </div>
        </header>
        <!-- navbar menu end -->

        <!-- leaderboard part start -->
        <div class="container padding-t">
            <div class="row">
                <table class="table table-hover table-dark">
                    <caption>Ranking of all users</caption>
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Country</th>
                            <th scope="col">Nickname</th>
                            <th scope="col">Wins</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% for(var i=0; i < PlayersList.length; i++){%>
                          <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><div class=<%= PlayersList[i].flag %>></div></td>
                            <td><%= PlayersList[i].name %></td>
                            <td><%= PlayersList[i].wins %></td>
                          </tr>

                        <% } %>
                  </tbody>
                </table>
            </div>
        </div>
        <!-- leaderboard part end -->
    </div>

      <!-- Footer's part start -->
      <footer id="sticky-footer" class="py-4 bg-dark text-white-50"> <!-- padding top & bottom | 50% opacity white text -->
          <div class="container text-center">
              <small>Copyright &copy; DELTEIL Cl√©ment | Project 2 - Tic Tac Toe AI Server</small>
          </div>
      </footer>
      <!-- Footer's part end -->

      <!-- script to use fontawesome icons -->
      <script src="https://kit.fontawesome.com/984feae7b7.js" crossorigin="anonymous"></script>
      <!-- Optional JavaScript -->
      <!-- jQuery first, then Popper.js, then Bootstrap JS -->
      <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>